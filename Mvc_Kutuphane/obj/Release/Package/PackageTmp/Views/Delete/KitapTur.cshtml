@model IEnumerable<Mvc_Kutuphane.Models.tbl_kitapTur>

@{
    Layout = null;
}
@{
    ViewBag.Title = "Kitap Tür";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
@using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "gelenSonuc", InsertionMode = InsertionMode.Replace }))
{ }

    <table class="table">
        <tr>
            <th>
                <center> Adı</center>
</th>
         
            <th>
                <center>  İcon</center>
</th>
            <th>
                <center>  Resim</center>
</th>
            <th>
                <center>  @Html.DisplayNameFor(model => model.kayitTarihi)</center>
</th>
            
            <th>
                <center> @Html.DisplayNameFor(model => model.guncellemeTarihi)</center>
</th>
            
            
        
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                
                    <td>
                        <center> @Html.DisplayFor(modelItem => item.ad)</center>
</td>

                    <td>
                        <center><img src="@Html.DisplayFor(modelItem => item.iconHtml)" width="15" height="15">  </center>
</td>
                    <td>
                        <center><img src="@Html.DisplayFor(modelItem => item.resimUrl)" width="64" height="79">  </center>
</td>
                    <td>
                        <center> @Html.DisplayFor(modelItem => item.kayitTarihi)</center>
</td>

                    <td>
                        <center> @Html.DisplayFor(modelItem => item.guncellemeTarihi)</center>
</td>
                
                
                <td> 
                    @Html.ActionLink("Sil", "DelKitapTur", new { id = item.ID })
                </td>
            </tr>
        }

   </table>