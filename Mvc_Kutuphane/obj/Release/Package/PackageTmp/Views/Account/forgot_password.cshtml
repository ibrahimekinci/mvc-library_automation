@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Şifremi Unuttum";
}
<h1>
    @ViewBag.Title
</h1>
<section class="main">
    <div class="container">
        <div class="row">
            <div class="col-sm-5 login-form">
                <div class="panel panel-default">
                    <div class="panel-intro text-center">
                        <h1 class="logo"><i class="fa fa-recycle"></i> Kütüphane</h1>
                    </div>
                    <div class="panel-body">
                        <form>
                            <div class="form-group">
                                <input type="text" placeholder="Email veya Kullanıcı Adı" class="form-control input-lg">
                            </div>
                            <div class="form-group">
                                <button class="btn btn-block btn-custom">Parolamı Sıfırla</button>
                            </div>
                        </form>
                    </div>
                </div>
                <p class="text-center">Hesabınız yok mu? <a href="~/Account/signup"><strong>Üye Ol</strong></a></p>
            </div>
        </div>
    </div>
</section>
