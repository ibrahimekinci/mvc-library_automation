@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "iletişim";
}

<section class="main">
    <div class="container">
        <div class="row">

            <div class="col-sm-4"><br /></div>
            <div class="col-sm-4">
                <div class="panel panel-default">

                    <div class="widget">
                        <div class="widget-header">
                            <h3>Bizimle İletişime Geçiniz</h3>
                        </div>
                        <div class="widget-body">
                            @Html.ValidationMessage("_HATA")
                            @using (Html.BeginForm("iletisim","Home"))
                            {
                                <div class="form-group">
                                    @Html.TextBox("mail", "", new { @class = "form-control input-lg", @placeholder = "mail" })
                                </div>
                                        <div class="form-group">
                                            @Html.TextBox("konu", "", new { @class = "form-control input-lg", @placeholder = "konu" })
                                        </div>
                                        <div class="form-group">
                                            @Html.TextArea("ileti", "", new { @class = "form-control input-lg", @placeholder = "ileti" })
                                        </div>
                                        <div class="form-group">
                                            <button class="btn btn-block btn-custom">Gönder</button>
                                        </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
