
@{
    ViewBag.Title = "Şifre Değiştir";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
<h1>
    @ViewBag.Title
</h1>

@model Mvc_Kutuphane.Models.sifreDegistir
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="form-group">
        <label class="col-sm-3 control-label"></label>
        <div class="col-sm-9">
            <h2 style="color:green;">  @ViewBag.Mesaj</h2> 
           <span class="help-block"></span>
        </div>
    </div>
    <br />
    <div class="form-group">
        <label class="col-sm-3 control-label">Geçerli şifre</label>
        <div class="col-sm-9">
            <input type="password" name="sifre" id="sifre" class="form-control" placeholder="Geçerli şifre" value="">                                         <span class="help-block"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Yeni Şifre</label>
        <div class="col-sm-9">
            <input type="password" name="yeniSifre" id="yenisifre" class="form-control" placeholder="Yeni Şifre" value="">                                         <span class="help-block"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">Şifreyi Onayla</label>
        <div class="col-sm-9">
            <input type="password" name="yeniSifretekrar" id="yeniSifretekrar" placeholder="Yeni Şifre tekrar" class="form-control">                                           <span class="help-block"></span>
        </div>
    </div>
    <div class="form-group">
        <button class="btn btn-block btn-custom">Güncelle</button>
    </div>

    <div id="gelenSonuc">

    </div>
}

<div style="clear:both"></div>
