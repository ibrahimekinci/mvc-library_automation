
@{
    Layout = null;
}

<div class="account-header">
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-md-3 col-lg-2">
                <!-- User avatar -->
                <div class="profile_avatar">
                    <img src="@ViewBag.resimUrl" alt="avatar" class="img-responsive">

                </div>
            </div>
            <div class="col-sm-8 col-md-9 col-lg-10">
                <div class="profile_summary">
                    <!-- User name -->
                    <h3 class="profile_name">@ViewBag.ad</h3>
                    <!-- User status -->
                    <p>@ViewBag.Rol</p>
                    <!-- Contact -->
                    <a href='@Url.Action("signout","Account")' class="btn btn-primary btn-warning btn-sm"><i class="fa fa-sign-out"></i> Çıkış Yap</a>
                </div> <!-- / .profile__summary -->
            </div>
        </div> <!-- / .row -->
    </div> <!-- / .container -->
</div>
